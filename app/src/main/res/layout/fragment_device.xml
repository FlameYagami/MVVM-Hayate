<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.mvvm.hayate.vm.main.DeviceVm" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.mvvm.component.uc.widget.AppBarView
            android:id="@+id/viewAppBar"
            onMenuClick="@{vm.onMenuClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcMenu="@mipmap/ic_nav_add"
            app:visibleLogo="true"
            app:visibleMenu="true"
            app:visibleNav="false" />
    </LinearLayout>
</layout>