<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog弹框样式 -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="Divider.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Line.Vertical">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppCompatCheckBox.Green" parent="Theme.AppCompat">
        <item name="colorAccent">@color/checkBoxSelectedGreen</item>
        <item name="android:textColorSecondary">@color/checkBoxNormal</item>
    </style>

    <style name="AppCompatCheckBox.Red" parent="Theme.AppCompat">
        <item name="colorAccent">@color/checkBoxSelectedRed</item>
        <item name="android:textColorSecondary">@color/checkBoxNormal</item>
    </style>

    <style name="SwitchCompat.Yellow" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency)
           switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/colorYellow</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorSwitchNormal</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/colorSwitchBackground</item>
    </style>

    <!-- 常用圆角按钮.蓝色 -->
    <style name="Widget.MaterialComponents.Button.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="cornerRadius">@dimen/cardCornerRadius</item>
        <item name="backgroundTint">@color/button_background_tint_blue</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <!-- 常用圆角按钮.红色 -->
    <style name="Widget.MaterialComponents.Button.Red" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="cornerRadius">@dimen/cardCornerRadius</item>
        <item name="backgroundTint">@color/button_background_tint_red</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <!-- 单边圆角按钮 -->
    <style name="Widget.MaterialComponents.Button.Outlined" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/colorBlue</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- 无背景色按钮 -->
    <style name="Widget.AppCompat.Button.Borderless.Default" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- 无背景色按钮.红色 -->
    <style name="Widget.AppCompat.Button.Borderless.Red" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!-- 无背景色按钮.蓝色 -->
    <style name="Widget.AppCompat.Button.Borderless.Blue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="StyleRightArrow">
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
    </style>

    <style name="StyleCardView">
        <item name="android:foreground">@drawable/selector_background_common</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="StyleRecyclerViewItem">
        <item name="android:background">@drawable/selector_background_common</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out_center</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--<item name="android:colorBackground">#000000</item> 也可以设置背景色以及menu中的其他属性-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>
</resources>